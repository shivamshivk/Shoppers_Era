<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_insetEdge="bottom"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:title="@string/app_name"
                android:elevation="0dp"
                android:titleTextColor="@color/white"
                app:theme="@style/Mytheme"
                android:layout_gravity="top"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_scrollFlags="scroll|enterAlways"
                android:minHeight="?attr/actionBarSize"
                tools:targetApi="m">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Pay 100 INR"
                android:textSize="16sp"
                android:id="@+id/payment_amount"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/payment_amount"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:id="@+id/paytm_no"
                android:text="On Paytm No +91 7508456563"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paytm_no"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:text="Apply Coupon"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:id="@+id/apply"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="@color/text"
                android:layout_below="@+id/apply"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:id="@+id/or"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/or"
                android:layout_marginTop="20dp"
                android:text="Bank Transfer"
                android:id="@+id/ban_t"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Name - Kotak Mahindra Bank"
                android:layout_below="@+id/ban_t"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:id="@+id/bnk_name"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Holder Name - Umakshi"
                android:layout_below="@+id/bnk_name"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:id="@+id/bnk_holder_name"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account No - 1111994322"
                android:layout_below="@+id/bnk_holder_name"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:id="@+id/acc"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IFSC - KKBK0003999"
                android:layout_below="@+id/acc"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:id="@+id/ifsc"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/ifsc"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/request_order"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:text="Continue"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**Send Order details, address and Payment Screenshot to 7508456563"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:padding="16dp"
                android:textSize="17sp"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>