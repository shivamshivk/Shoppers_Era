<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="12dp">


        <customfonts.Zoom.TouchImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loader_layout"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/p_bar"
                android:id="@+id/loading_text"
                android:gravity="center"
                android:text="Image is Loading..."
                android:textColor="@color/text"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                />

        </RelativeLayout>


    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="top"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/fav_add"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                app:srcCompat="@drawable/heart_outline"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="265"
                android:layout_marginRight="5dp"
                android:id="@+id/count_all"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text"
                android:textSize="12sp"
                android:layout_marginEnd="5dp" />


        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/cat_name_text"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:text="Premium Series"
            tools:ignore="SmallSp"
            android:layout_marginStart="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/cat_name_text"
            android:orientation="horizontal"
            android:id="@+id/lin"
            android:layout_marginStart="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:id="@+id/price"
                android:text="₹780"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:srcCompat="@drawable/heart_outline"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:id="@+id/price_original"
                android:text="₹1000"
                android:layout_marginLeft="20dp"
                android:textSize="10sp"
                app:srcCompat="@drawable/heart_outline"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/product_id_text"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:layout_below="@+id/lin"
            android:layout_marginLeft="16dp"
            tools:text="Product ID - 87"
            android:layout_marginBottom="16dp"
            tools:ignore="SmallSp"
            android:layout_marginStart="16dp" />

    </RelativeLayout>

</LinearLayout>