<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"

        >

        <customfonts.TextView_Bold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:id="@+id/t1"
            android:textColor="#4d4d4d"
            android:text="Thank You !"
            android:textSize="20dp"
            android:gravity="center"
            android:src="@drawable/btn"/>


        <customfonts.Regular_Textview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="Seller will reach to you very soon"
            android:textSize="14dp"
            android:id="@+id/t2"
            android:gravity="center"
            android:src="@drawable/btn"/>


        <customfonts.Regular_Textview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="Your Order ID is"
            android:textSize="16sp"
            android:visibility="visible"
            android:id="@+id/t3"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:src="@drawable/btn"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let your friend know that you have posted your books on Bukarte for sale.."
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/friend_text"
            android:visibility="gone"
            android:textColor="@color/text"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/order_details"
            android:visibility="gone"
            android:layout_gravity="center">

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Order Id"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:src="@drawable/btn"/>


                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    tools:text="AD105"
                    android:id="@+id/order_id"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />


            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Order Date"
                    android:textSize="12dp"
                    android:src="@drawable/btn"/>


                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    tools:text="Today 11:30 am"
                    android:id="@+id/order_date"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />


            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Payment mode"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:src="@drawable/btn"/>


                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    tools:text="Tommorow 9:30 am"
                    android:textSize="14dp"
                    android:id="@+id/payment_mode"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />


            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Payable Amount"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:src="@drawable/btn"/>


                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    tools:text="$ 3.50"
                    android:id="@+id/payable_amount"
                    android:textSize="14dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginLeft="16dp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <customfonts.Regular_Textview
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="DONE"
        android:textSize="15dp"
        android:gravity="center"
        android:src="@drawable/btn"/>


</RelativeLayout>
