<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.shoppers_era.Layout.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:elevation="6dp"
            android:scaleType="centerCrop"
            tools:targetApi="lollipop" />

        <CheckBox
            android:id="@+id/tick"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:elevation="6dp"
            android:theme="@style/checkBoxStyle"
            android:background="@drawable/sqaure"
            android:checked="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:targetApi="lollipop" />


    </com.shoppers_era.Layout.SquareLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/cat__name"
        android:textSize="12sp"
        android:layout_below="@+id/container"
        android:layout_marginLeft="8dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/cat__name"
        android:orientation="horizontal"
        android:id="@+id/lin"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:id="@+id/price"
            android:text="₹780"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/price_original"
            android:text="₹1000"
            android:layout_marginLeft="20dp"
            android:textSize="10sp"/>


    </LinearLayout>


</RelativeLayout>


